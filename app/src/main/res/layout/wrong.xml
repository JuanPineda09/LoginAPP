<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >

    <FrameLayout
        android:id="@+id/frameExitoRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/headerysidebar"/>
        <ImageView
            android:id="@+id/backHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/arrowback" />
        <ImageView
            android:id="@+id/logoExito"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="90dp"
            android:src="@drawable/wrong" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="PRONTO PODRAS VER MAS..."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:translationY="70dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSalirApp"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:background="@drawable/rounded_style"
            android:backgroundTint="#000000"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Salir del APP"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:backgroundTint="@color/white" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/headerysidebar"
            android:layout_gravity="bottom"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>