<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/frameExitoRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/headerysidebar"/>
        <ImageView
            android:id="@+id/backHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/arrowback" />
        <ImageView
            android:id="@+id/logoExito"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="200dp"
            android:src="@drawable/logo" />
        <TextView
            android:id="@+id/mostrarNombre"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="¡Bienvenido!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="22dp"
            android:layout_marginBottom="120dp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="¡Por favor valida los datos y continua:"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginBottom="80dp"/>

        <TextView
            android:id="@+id/mostrarUsuario"
            android:layout_width="352dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="410dp"
            android:text="Usuario:"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/mostrarCorreo"
            android:layout_width="350dp"
            android:layout_height="20dp"
            android:text="Correo:"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/mostrarDate"
            android:layout_width="352dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="450dp"
            android:text="Fecha de Nacimiento:"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNextWrong"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="210dp"
            android:background="@drawable/rounded_style"
            android:backgroundTint="#000000"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Continuar"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:backgroundTint="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/headerysidebar"
            android:layout_gravity="bottom"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>