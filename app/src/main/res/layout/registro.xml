<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/headerysidebar" />

        <ImageView
            android:id="@+id/backHome"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/arrowback" />

        <ImageView
            android:id="@+id/logoHomeLogin"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="210dp"
            android:background="@drawable/rounded_logo"
            android:elevation="10dp"
            android:padding="40dp"
            android:src="@drawable/logosmall" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Registro"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="120dp"
            android:text="Nombre"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="104dp"
            android:hint="Nombre"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="43dp"
            android:text="Correo"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="80dp"
            android:hint="example@mail.com"
            android:inputType="textEmailAddress"

            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginRight="120dp"
            android:text="Usuario"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginRight="104dp"
            android:hint="Usuario"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="90dp"
            android:text="Fecha de Nacimiento"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp"
            android:hint="Fecha de Nacimiento"
            android:inputType="date"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginRight="120dp"
            android:text="Contraseña"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginRight="104dp"
            android:hint="***********"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="90dp"
            android:text="Repetir Contraseña"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="80dp"
            android:hint="******************"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="18dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:text="Tipo de Origami Favorito"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <CheckBox
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="Animales"
            android:layout_marginTop="230dp"
            android:layout_marginRight="130dp"/>
        <CheckBox
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="Objetos"
            android:layout_marginTop="230dp"
            android:layout_marginRight="25dp"/>
        <CheckBox
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:hint="Para regalar"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="60dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateUser"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:background="@drawable/rounded_style"
            android:backgroundTint="#000000"
            android:elevation="10dp"
            android:padding="10dp"
            android:text="Crear Usuario"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:backgroundTint="@color/white" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/headerysidebar" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>